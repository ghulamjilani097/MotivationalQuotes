<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.twofolksresearch.motivationalquotes.Splash"
    android:background="@drawable/splashfinalless">

    <ImageView
        android:id="@+id/splashimg"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="86dp"
        android:background="@drawable/splashhead" />

    <TextView
        android:id="@+id/txtsplash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/splashimg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Motivational Quotes"
        android:textColor="#ffffff"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/splashquote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="1sp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="ENJOY EVERY MOMENT"
        android:textColor="#000000"
        android:layout_below="@id/txtsplash"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtsplash"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:text="You can always switch between languages while reading"
        android:textColor="#fff"
        android:textSize="17dp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15sp"
        android:spinnerMode="dialog"
        android:textAlignment="center"></Spinner>

</RelativeLayout>
