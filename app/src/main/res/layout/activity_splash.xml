<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.memor.thinkers.jilani.motivationalquotes.Splash"
    android:background="@drawable/splashfinalless">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:background="@drawable/splashlogo"
        android:id="@+id/splashimg"/>

    <TextView
        android:id="@+id/txtsplash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/splashimg"
        android:layout_centerHorizontal="true"
        android:text="Motivational Quotes"
        android:textColor="#ffffff"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/splashquote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="1sp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="ENJOY EVERY MOMENT"
        android:textColor="#000000"
        android:layout_below="@id/txtsplash"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:layout_centerInParent="true"/>

</RelativeLayout>
