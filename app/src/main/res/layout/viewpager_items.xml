<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/viewpager_items">

    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        android:layout_above="@id/quotes"
        android:src="@drawable/splashlogo"/>

    <TextView
        android:id="@+id/quotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="1sp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="I love you the more in that I believe you had liked me for my own sake and for nothing else."
        android:textColor="#000000"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_centerInParent="true"/>

    <ImageView
        android:layout_width="250px"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@+id/quotes"
        android:src="@drawable/separ2"
        android:layout_marginTop="10dp"
        android:id="@+id/separator"/>

    <TextView
        android:id="@+id/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Author"
        android:layout_centerInParent="true"
        android:layout_below="@+id/separator"
        android:textColor="#8A8A8A"
        android:textSize="15sp"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/share"
        android:layout_below="@id/author"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:id="@+id/sharemsg" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/moon"
        android:layout_centerInParent="true"
        android:layout_below="@id/sharemsg"
        android:layout_marginTop="20dp"
        android:id="@+id/theme" />

</RelativeLayout>